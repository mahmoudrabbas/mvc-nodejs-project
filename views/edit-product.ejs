<%- include("partials/header.ejs") %> 
    </div>
    <% if(message !== '') { %>
        <div class="container">
            <div class="row text-center">
                <% if(err){ %>
                    <p class="alert alert-danger m-3"><%= message %> </p>
                <% } else { %> 
                    <p class="alert alert-success m-3"><%= message %> </p>
                <% } %> 
            </div>
        </div>
    <% } %> 
    <div class="container">
        <div class="row d-flex flex-md-row flex-column-reverse align-items-center ">
            <form class="pt-5 col-md-6" action="/products/edit-product/<%=result.productID%>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="category">Gategory</label>
                    <select class="form-control" id="category" name="category" required>
                        <option selected value="<%= result.category %>"><%= result.category %></option>
                        <option value="samsung">samsung</option>
                        <option value="iphone">iphone</option>
                        <option value="sony">sony</option>
                        <option value="oppo">oppo</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" placeholder="ex. iPhone 12 PRO" class="form-control" id="title" value="<%=result.title%>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea type="text" name="description" class="form-control" id="description" value="<%=result.description%>" required><%=result.description%></textarea>
                </div>
        
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" name="quantity" min="1" placeholder="ex. 5 Itmes" class="form-control" value="<%=result.quantity%>" id="quantity" required>
                </div>
        
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" name="price" min="1" placeholder="ex. 1000 LE" class="form-control" id="price" value="<%=result.price%>" required>
                </div>
                <div class="form-group">
                    <label for="image">
                        Image<br />
                        <span class="btn btn-outline-secondary mt-2">Upload</span>
                    </label>
                    <input type="file" style="display: none;" name="img" class="form-control" id="image" required>
                </div>
                <button type="submit" class="btn btn-primary">Edit Product</button>
            </form>
            <div class="col-md-6 text-center mt-4">
                <img src="/assets/imgs/products/<%=`${result.productID}.${result.image.split('.')[1]}`%>" width="100%" height="100%" />
            </div>
        </div>
    </div>
</body>
</html>